<% layout("/layouts/boilerplate") -%>

    <!-- <h3 >All Things</h3> -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <style>
        #filters {
            margin-top: 2rem;
            display: flex;
            flex-wrap: wrap;
    
        }

        .filter {
            display: flex;
            flex-direction: column;
            justify-content: center;
            justify-content: space-around;
            align-items: center;
            margin-right: 2rem;
            opacity: 0.7;
            flex-grow: 1;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.7rem;
        }

        .tax-info {
            display: none;
        }

        .box {
            border: 1px solid black;
            padding: 5px;
            border-radius: 1rem;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
            margin-left: 2rem;
            /* flex: 1; */
        }

        @media only screen and (max-width: 990px) {

            #filters {

                display: inline-flex;
                flex-wrap: wrap;
                align-items: center;
                justify-content: center;
                
            }

            .box {
                flex-shrink: 1;
                padding: 10px;
                margin-left: 0;
            }
        }
        @media only screen and (max-width: 500px) {
            #filters {
                flex-shrink: 1;
            }
            .box {
                flex-grow: 1;
                margin-left: 0;
            }
        }
    </style>

    <div id="filters">
        <div class="filter" onclick="searchByCategory('Beach')">
            <div class="icon-container"><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
        </div>

        <div class="filter" onclick="searchByCategory('Castle')">
            <div class="icon-container"><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castle</p>
        </div>
        <div class="filter" onclick="searchByCategory('Camping')">
            <div class="icon-container"><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter" onclick="searchByCategory('Amazing Views')">
            <div class="icon-container"><i class="fa-solid fa-mountain-city"></i></div>
            <p>Amazing Views</p>
        </div>
        <div class="filter" onclick="searchByCategory('Mountains')">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter" onclick="searchByCategory('Warehouse')">
            <div class="icon-container"><i class="fa-solid fa-warehouse"></i></div>
            <p>Warehouse</p>
        </div>
        <div class="filter" onclick="searchByCategory('Farm')">
            <div class="icon-container"><i class="fa-solid fa-cow"></i></div>
            <p>Farm</p>
        </div>
        <div class="filter" onclick="searchByCategory('Igloo')">
            <div class="icon-container"><i class="fa-solid fa-igloo"></i></div>
            <p>Igloo</p>
        </div>
        <div class="filter" onclick="searchByCategory('Boat')">
            <div class="icon-container"><i class="fa-solid fa-ship"></i></div>
            <p>Boat</p>
        </div>
        <div class="box">
            <div class="form-check form-switch form-check-reverse ">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display After all taxes</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">

        <% for(let listing of allListings){ %>
            <a href="/listings/<%=listing._id %>" class="listing-links">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-images"
                        style="height: 20rem;">
                    <div class="card-img-overlay"></div>

                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b>
                            <br>
                            &#8377; <%= listing.price.toLocaleString("en-IN"); %>
                                &nbsp; &nbsp; <i class="tax-info">18% GST</i>
                        </p>
                    </div>
                </div>
                <% } %>
    </div>

    <script>
        let checkbox = document.getElementById("flexSwitchCheckDefault");
        let taxInfo = document.getElementsByClassName("tax-info");

        checkbox.addEventListener("click", () => {
            for (info of taxInfo) {
                if (info.style.display != "inline") {
                    info.style.display = "inline";
                } else {
                    info.style.display = "none";
                }
            }
        });
